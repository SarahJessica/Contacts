#mainEditPage
  .row
    .col-sm-4.col-sm-offset-4
      h2 {{name}}
  .row
    .col-sm-2.col-sm-offset-4
      img.img-responsive.img-thumbnail.feature(ng-src='{{afPhotos[0].$value}}')
      button.btn.btn-warning(ng-click='deleteImg(photo, $index)') Delete Image
      
    .col-sm-4
      h3 Contact Information
      h4 Address: {{printAlbum.description}}
      h4 Birthday: {{printAlbum.date | date: 'MM-dd-yyyy'}}
      h4 Telephone: {{printAlbum.phone}}
      h4 Email: {{printAlbum.email}}
      h4 Homepage: {{printAlbum.url}}
      h4 Facebook: {{printAlbum.facebook}}
      h4 Twitter: {{printAlbum.twitter}}

  .row
    .col-sm-4.col-sm-offset-4
      button.btn.btn-warning(ng-click='goBack()') Back
  .row
    .col-sm-4.col-sm-offset-4
      
      
      form
        .form-group
          
          label Address
          input.form-control(type='text', ng-model='album.description', placeholder='1 Short Address, And City Name')
          label D.O.B.
          input.form-control(type='date', ng-model='album.date')
          label Telephone
          input.form-control(type='tel', ng-model='album.phone' placeholder='001 2345 678')
          label Email
          input.form-control(type='text', ng-model='album.email' placeholder='your@email.com')
          label Homepage
          input.form-control(type='text', ng-model='album.url' placeholder='www.yourwebpage.com')
          label Facebook
          input.form-control(type='text', ng-model='album.facebook' placeholder='facebook.handle')
          label Twitter
          input.form-control(type='text', ng-model='album.twitter' placeholder='@yourtwittername')
        .form-group
          button.btn.btn-success.center-block(ng-click='saveAlbumInfo(album)') Update Contact Info
      form
        .form-group
          label Add Photo
          input.form-control(type='file', ng-model='photo')
        .form-group
          button.btn.btn-success.center-block(ng-click='convertPhoto(photo)') Add Photo
        .form-group
          img.previmg.center-block

      
