nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') ContactList
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='home'): i.icon-preview.mdi-action-home &nbsp; Home &nbsp;
        li: a(ui-sref='albums.new'): i.icon-preview.mdi-action-assignment-ind &nbsp; New Contact &nbsp;
        li: a(ui-sref='albums.list'): i.icon-preview.mdi-editor-format-list-bulleted &nbsp; Contacts List &nbsp;
        li: button.btn.btn-link.btn-lg(ng-click='logout()'): i.fa.fa-sign-out &nbsp; {{displayName}}
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='home'): i.icon-preview.mdi-action-home &nbsp; Home &nbsp;
        li: a(ui-sref='register'): i.icon-preview.mdi-content-create &nbsp; Register &nbsp;
        li: a(ui-sref='login'): i.icon-preview.mdi-communication-vpn-key &nbsp; Login
